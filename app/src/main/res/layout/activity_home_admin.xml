<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/backadmin"
    >


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#f8f8ff"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cHoaDon"
            android:layout_width="0dp"

            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/bill"
                    app:tint="#4CAF50" />

                <TextView
                    android:id="@+id/txthoadon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Quản Lý Hóa Đơn"
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cThongKe"
            android:layout_width="0dp"

            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="170dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_baseline_pie_chart_24"
                    app:tint="#4CAF50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Thống Kê"
                    android:textColor="#ff0000"

                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/l1"
        android:id="@+id/cSignOut"
        android:layout_margin="10dp"

        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="150dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="25dp">
            <ImageView
                app:tint="#E91E63"
                android:layout_marginLeft="100dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_logout_24"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#008000"
                android:textSize="20sp"
                android:padding="5dp"
                android:gravity="center"
                android:text="Đăng Xuất"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<ImageView
    android:id="@+id/imgdangsanpham"
    android:layout_below="@+id/cSignOut"
    android:layout_width="150dp"
    android:background="@color/purple_500"
    android:layout_marginLeft="130dp"
    android:layout_height="150dp"
    android:text="Đăng sản phẩm"/>
</RelativeLayout>